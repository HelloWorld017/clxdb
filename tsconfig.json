{
  "compilerOptions": {
    // Strictness
    "strict": true,
    "exactOptionalPropertyTypes": false,

    // Module / Resolution
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },

    // Types
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable", "dom.asynciterable"],
    "types": ["node", "react", "react-dom"],
    "typeRoots": ["./node_modules", "./node_modules/@types"],

    // Others
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "composite": true
  },

  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "eslint.config.js",
    "vite.config.ts"
  ]
}
